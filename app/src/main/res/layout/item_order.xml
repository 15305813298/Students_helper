<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/qmui_config_color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="这是标题"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="收件地址: "
        android:textColor="@color/qmui_config_color_gray_6"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/mTitle"
        app:layout_constraintTop_toBottomOf="@+id/mTitle" />

    <TextView
        android:id="@+id/mPickAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="取件地址: "
        android:textColor="@color/qmui_config_color_gray_6"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/mTitle"
        app:layout_constraintTop_toBottomOf="@+id/mAddress" />

    <TextView
        android:id="@+id/mDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="订单描述: "
        android:textColor="@color/qmui_config_color_gray_6"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mTitle"
        app:layout_constraintTop_toBottomOf="@+id/mPickAddress" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaButton
        android:id="@+id/mPick"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="接单"
        android:background="@drawable/shape_radius"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/mPickAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mAddress" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginTop="15sp"
        android:src="@drawable/ic_location_light"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mDescription"
        app:layout_constraintTop_toBottomOf="@+id/mDescription" />

    <TextView
        android:id="@+id/mSchoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杭州师范大学"
        android:layout_marginStart="15sp"
        android:textSize="12sp"
        android:textColor="@color/qmui_config_color_gray_6"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <TextView
        android:id="@+id/mOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15sp"
        android:text="¥ 5.00"
        android:textColor="@color/qmui_config_color_red"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/mTitle"
        app:layout_constraintStart_toEndOf="@+id/mTitle"
        app:layout_constraintTop_toTopOf="@+id/mTitle" />

    <TextView
        android:id="@+id/mTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1995-08-22 22:22"
        android:textSize="12sp"
        android:textColor="@color/qmui_config_color_gray_6"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/mSchoolName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mSchoolName" />

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:background="@color/qmui_config_color_gray_9"
        android:layout_marginEnd="10dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>