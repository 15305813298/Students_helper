<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41cbff"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mCityBtn"
        android:layout_width="130dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/mWeatherImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mLocate"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_location_light"
            android:tint="@color/qmui_config_color_white"
            app:layout_constraintBottom_toBottomOf="@+id/mCity"
            app:layout_constraintEnd_toStartOf="@+id/mCity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mCity" />

        <TextView
            android:id="@+id/mCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杭州"
            android:textColor="@color/qmui_config_color_white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mRefresh"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_shuaxin"
            android:tint="@color/qmui_config_color_white"
            app:layout_constraintBottom_toBottomOf="@+id/mCity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mCity"
            app:layout_constraintTop_toTopOf="@+id/mCity" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/mWeatherImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/wu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/mWeatherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="晴"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mWeatherImg" />

    <TextView
        android:id="@+id/mTmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 ~ 33 °C"
        android:layout_marginTop="40dp"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mWeatherText" />


</androidx.constraintlayout.widget.ConstraintLayout>